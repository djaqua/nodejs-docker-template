
microservice:
  build: .
  links:
    - mongodb
  ports:
    - 80:8000

mongodb:
  image: mongo:latest
  container_name: "mongodb"
  ports: 
    - 27017:27017
  volumes:
    - ./data/db:/data/db
    - ./logs:/data/logs
  environment:
    - MONGO_DATA_DIR=/data/db
    - MONGO_LOG_DIR=/data/logs   
  command: mongod --smallfiles --logpath=/data/logs

{
    "filename": "production.json",
   
    "service" : {
        "port" : 80
    },
 
    "persistance" : {
        "mongo": {
            "hostname": "prod-mongo"
        }
    },

    "logging": {
    
        "winston": {
            
            "level": "info",
            "useColors": false,

            "transports" : {

                "file": {

                    "general": {
                        "level": "info"
                    },
                    "problems": {
                        "level": "warning"
                    }
                },
                "console": {

                    "general": {
                        "silent": true,
                        "colorize": false
                    }
                },
                "http": {

                    "general": {
                        "port": 443,
                        "ssl": true
                    }
                }
            }
        }
   	}
}

